{
  "parsing": {
    "enable_relevance_filter": true,
    "relevance_threshold": 0.80,
    "filter_prompt": "task_filter_relevance_v1"
  },
  "ollama": {
    "url": "http://localhost:11434",
    "model": "hf.co/ibm-granite/granite-4.0-h-tiny-GGUF:Q8_0",
    "embedding_model": "hf.co/bartowski/granite-embedding-125m-english-GGUF:Q5_K_M",
    "timeout_seconds": 30,
    "max_retries": 3,
    "retry_backoff_ms": 500
  },
  "prompts": {
    "task_a_projects": "task_a_projects_v1",
    "task_b_stakeholders": "task_b_stakeholders_v1",
    "task_c_importance": "task_c_importance_v1",
    "task_d_meetings": "task_d_meetings_v1"
  },
  "processing": {
    "batch_size": 5,
    "max_workers": 2,
    "log_level": "INFO",
    "date_range": {
      "start": "2025-10-01",
      "end": "2025-12-31"
    },
    "min_conversation_messages": 3
  },
  "thresholds": {
    "confidence_high": 0.80,
    "confidence_medium": 0.50,
    "confidence_low": 0.00
  },
  "clustering": {
    "embedding_similarity_threshold": 0.75,
    "enable_deduplication": true
  },
  "stakeholder_validation": {
    "enable_recipient_validation": true,
    "log_rejected_extractions": true
  },
  "stakeholder_filtering": {
    "enable_filtering": true,
    "min_role_confidence": 0.65,
    "min_mention_count": 2,
    "enable_name_deduplication": true,
    "name_similarity_threshold": 0.80,
    "exclude_generic_names": true,
    "validate_email_domains": true
  },
  "diagnostics": {
    "enable_diagnostics": true,
    "output_raw_extractions": true,
    "output_filter_log": true,
    "output_comparison": true
  },
  "post_aggregation_filter": {
    "enable_filter": true,
    "prompt_id": "task_post_aggregation_filter_v1",
    "default_user_role": "IT Solution Architect",
    "default_confidence_threshold": 0.75,
    "batch_size": 5,
    "available_roles": [
      "IT Solution Architect",
      "Product Manager",
      "Software Engineer",
      "Engineering Manager",
      "DevOps Engineer",
      "Data Engineer",
      "Security Engineer",
      "Other"
    ],
    "role_keywords": {
      "IT Solution Architect": ["infrastructure", "cloud", "architecture", "migration", "integration", "design"],
      "Product Manager": ["roadmap", "feature", "requirement", "priority", "user", "backlog"],
      "Software Engineer": ["code", "implementation", "technical", "development", "bug", "performance"],
      "Engineering Manager": ["team", "project", "schedule", "resource", "delivery", "capacity"],
      "DevOps Engineer": ["deployment", "ci/cd", "infrastructure", "monitoring", "automation", "release"],
      "Data Engineer": ["data", "pipeline", "analytics", "warehouse", "etl", "database"],
      "Security Engineer": ["security", "compliance", "vulnerability", "audit", "access", "encryption"]
    }
  },
  "output": {
    "dir": "./data",
    "formats": ["json", "markdown", "csv"]
  }
}
